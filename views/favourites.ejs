<!DOCTYPE html>
<html lang="en">
<head>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" crossorigin="anonymous">

    <script defer src="https://use.fontawesome.com/releases/v5.0.9/js/all.js" integrity="sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl" crossorigin="anonymous"></script>


    <title>UniRooms - My Favourites</title>

    <style>
          /* Always set the map height explicitly to define the size of the div
           * element that contains the map. */
          #map {
            height: 30em;
            width:150em;
          }
          /* Optional: Makes the sample page fill the window. */
          html, body {
            height: 100%;
            margin: 0;
            padding: 0;
          }
        </style>
</head>

<body>
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1daa76;">
              <a class="navbar-brand" href="#"><img src="/images/unirooms.jpg" height=30 width=100></a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item ">
                    <a class="nav-link" href="/profile">Home </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/addProperty">Add Property </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/propertylist">View Properties</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/userlist">View Users</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" href="/favourites">My Favourites</a>
                  </li>
                </ul>
                <span class="navbar-text">
                  <b>Welcome <%= user.firstName %></b>, <%= user.email %> <a href="/logout">logout </a>
                </span>
              </div>
            </nav>



    <div class="container-fluid text-center">
    <table id="favouriteslist" class="table table-striped table-bordered " style="width:100%; height:47em">
            <thead>
                <tr>
                    <th>_id</th>
                    <th>Address L1</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
            <% user.favourites.forEach(function (user) { %>
                <tr>
                <td><%= user.propertyID %> </td>
                <td><%= user.propertyAddrL1 %></td>
                <td><a href="/viewproperty?propID=<%= user.propertyID %>"><i class="fa fa-search" title="View property"></i></a><a href=""><i class="far fa-edit" title="Edit User"></i></a> <a href=""><i class="far fa-trash-alt" title="Delete User"></i></a><a href=""> <i class="fas fa-lock" title="Lock User"></i></a></td>
                </tr>
                <% }) %>
            </tbody>

        </table>


    </div>
</body>

<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
<script>
$(document).ready(function() {
    $('#favouriteslist').DataTable();
} );
</script>
</html>